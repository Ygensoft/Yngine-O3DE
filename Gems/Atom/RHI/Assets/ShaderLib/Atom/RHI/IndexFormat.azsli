#pragma once

#if !defined(IndexFormatEnumType)
#define IndexFormatEnumType
#endif

enum class IndexFormat IndexFormatEnumType
{
    Unknown = 0,

    Uint16,
    Uint32,
};

inline uint GetIndexFormatSize(IndexFormat format)
{
    switch (format)
    {
    case IndexFormat::Uint16:
        return 2;
    case IndexFormat::Uint32:
        return 4;

    default:
        return 0;
    }
}
