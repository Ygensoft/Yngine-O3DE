#pragma once

option enum class BlendMode {Opaque, Cutout, Blended, Additive, Subtractive, Modulate } o_blendMode;

void CheckClipping(float alpha, float opacityFactor)
{
    switch(o_blendMode)
    {
    case BlendMode::Cutout:
        {
            if(alpha)
            {
                clip(alpha - opacityFactor);
            }
            else
            {
                clip(-1);
            }
            break;
        }
        default:
            break;
    }
}
